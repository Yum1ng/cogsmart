
.container
	.row

		.col-md-6.col-md-offset-3
			.panel.panel-default{ style: "margin-top: 60px;" }
				.panel-heading
					%h3.panel-title
						Sign Up

				.panel-body
					= form_for( resource, as: resource_name, url: registration_path( resource_name ), html: { class: 'separate-sections' } ) do |f|
						= devise_error_messages!
						.row
							.form-group.col-md-10
								.input-group
									.input-group-addon
										%i.fa.fa-user
									= f.text_field :name, autofocus: true, placeholder: "Name", class: 'form-control'
						.row
							.form-group.col-md-10
								.input-group
									.input-group-addon
										%i.fa.fa-envelope
									= f.email_field :email, :autofocus => true, placeholder: 'Email', class: 'form-control'

						.row
							.form-group.col-md-10
								.input-group
									.input-group-addon
										%i.fa.fa-key
									= f.password_field :password, placeholder: 'PIN', class: 'form-control'


						.row
							.form-group.col-md-10
								.input-group
									.input-group-addon
										%i.fa.fa-key
									= f.password_field :password_confirmation, placeholder: 'Confirm PIN', class: 'form-control'

						
						.row
							.form-group.col-md-10
								.input-group
									= f.submit "Sign up", class: 'btn btn-primary'

				.panel-footer
					= render "devise/shared/links"

