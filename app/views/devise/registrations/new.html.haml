
.container
	.row

		.span8.offset2
			.panel.panel-default{ style: "margin-top: 100px;" }
				.panel-heading
					%h3.panel-title
						Sign Up

				.panel-body
					= form_for( resource, as: resource_name, url: registration_path( resource_name ), html: { class: 'separate-sections' } ) do |f|
						= devise_error_messages!
						.row
							.form-group.col-md-10
								.input-group
									.input-group-addon
										%i.icon-envelope
									= f.email_field :email, :autofocus => true, placeholder: 'Email', class: 'form-control'

						.row
							.form-group.col-md-10
								.input-group
									.input-group-addon
										%i.icon-user
									= f.text_field :name, placeholder: 'User Name', class: 'form-control'


						.row
							.form-group.col-md-10
								.input-group
									.input-group-addon
										%i.icon-key
									= f.password_field :password, placeholder: 'Password', class: 'form-control'


						.row
							.form-group.col-md-10
								.input-group
									.input-group-addon
										%i.icon-key
									= f.password_field :password_confirmation, placeholder: 'Confirm Password', class: 'form-control'

						
						.row
							.form-group.col-md-10
								.input-group
									= f.submit "Sign up", class: 'btn btn-primary'

				.panel-footer
					= render "devise/shared/links"

