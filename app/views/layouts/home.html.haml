!!!strict

%html{ lang: :en }
	%head
		%title
			CogSMART
		%meta{ name: "viewport", content: "width=device-width, initial-scale=1.0" }

		= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true
		= stylesheet_link_tag "//netdna.bootstrapcdn.com/font-awesome/3.2.1/css/font-awesome.css"
		= stylesheet_link_tag 'http://fonts.googleapis.com/css?family=Lato:300,400,700,900,300italic,400italic,700italic,900italic'
		= javascript_include_tag "application", "data-turbolinks-track" => true
		
		= csrf_meta_tags

	%body.pull_top
		= render 'home/navbar'
		#coming_soon
			.head
				.container
					.span12.text
						%h4
							CogSMART stands for:
						%h4
							Cognitive Symptom Management and Rehabilitation Therapy
						%p
							We are currently working on an awesome new site. 
							%span
								STAY TUNED!
							%br
							Please don´t  forget to check out our tweets and subscribe to be notified.

			.email_wrapp
				.container
					= render 'partials/flash'
					.span11.wrapp
						= form_tag contacts_path do
							%p
								%strong
									Sign up here
								to be one of the first to know when it´s ready
							= text_field_tag :email, '',  placeholder: "Email address..."
							&nbsp;
							= submit_tag 'ok', class: 'btn btn-primary send'
							


		= render 'partials/footer'


					